<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" styleClass="main-theme" xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fluidity.program.ui.controllers.SimulationController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>

    <children>
        <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
              prefWidth="1280.0" styleClass="container">
            <children>
                <BorderPane prefHeight="700.0" prefWidth="1000.0">
                    <center>
                        <Canvas fx:id="canvasX" height="480.0" onMouseDragged="#mouseDragged"
                                onMousePressed="#mousePressed"
                                onMouseReleased="#mouseReleased" width="720.0" BorderPane.alignment="CENTER"/>
                    </center>
                </BorderPane>
                <VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                      minWidth="-Infinity" prefHeight="700.0" prefWidth="250.0" styleClass="simulation-container">
                    <HBox.margin>
                        <Insets bottom="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                    <children>
                        <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                              minWidth="-Infinity" prefHeight="382.0" prefWidth="240.0"
                              styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                            <children>
                                <Label fx:id="viscosityLabel" styleClass="small-text" text="Viscosity:">
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <Slider fx:id="viscositySlider" blockIncrement="0.25" max="30.0" prefHeight="0.0"
                                        prefWidth="85.0"
                                        showTickLabels="true" showTickMarks="true" styleClass="small-text"/>
                                <Label fx:id="diffusionRateLabel" layoutX="107.0" layoutY="21.0" styleClass="small-text"
                                       text="Diffusion Rate:"/>
                                <Slider fx:id="diffusionRateSlider" blockIncrement="0.25" layoutX="11.0" layoutY="38.0"
                                        max="30.0"
                                        prefHeight="0.0" prefWidth="85.0" showTickLabels="true" showTickMarks="true"
                                        styleClass="small-text"/>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0"
                                      styleClass="small-text">
                                    <children>
                                        <Label text="Container Type:" styleClass="small-text"/>
                                        <ChoiceBox fx:id="containerType" prefWidth="110.0">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="Box"/>
                                                    <String fx:value="Tunnel"/>
                                                </FXCollections>
                                            </items>
                                        </ChoiceBox>
                                    </children>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0"
                                      styleClass="small-text">
                                    <children>
                                        <Label text="Plot Choice:" styleClass="small-text"/>
                                        <ChoiceBox fx:id="plotChoice" prefWidth="110.0">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="Density"/>
                                                    <String fx:value="x-Velocity"/>
                                                    <String fx:value="y-Velocity"/>
                                                </FXCollections>
                                            </items>
                                        </ChoiceBox>
                                    </children>
                                </HBox>
                                <HBox alignment="TOP_CENTER" prefHeight="28.0" prefWidth="238.0" spacing="10.0"
                                      styleClass="small-text">
                                    <children>
                                        <Label text="Mouse Action:" styleClass="small-text"/>
                                        <ChoiceBox fx:id="mouseAction" prefWidth="110.0">
                                            <items>
                                                <FXCollections fx:factory="observableArrayList">
                                                    <String fx:value="Drag Fluid"/>
                                                    <String fx:value="Add barrier"/>
                                                    <String fx:value="Delete barrier"/>
                                                </FXCollections>
                                            </items>
                                        </ChoiceBox>
                                    </children>
                                </HBox>

                                <HBox alignment="TOP_CENTER" layoutX="11.0" layoutY="130.0" prefHeight="28.0"
                                      prefWidth="238.0" spacing="10.0">
                                    <children>
                                        <CheckBox fx:id="sensorCheckbox" mnemonicParsing="false"
                                                  onAction="#onSensorCheckBoxClick"
                                                  prefHeight="16.0" prefWidth="74.0" styleClass="small-text"
                                                  text="Sensors"/>
                                    </children>
                                    <padding>
                                        <Insets top="5.0"/>
                                    </padding>
                                </HBox>
                                <Button fx:id="startSimulationButton" mnemonicParsing="false"
                                        onAction="#onStartSimulationClick"
                                        text="Start Simulation"/>
                            </children>
                        </VBox>
                        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                              prefHeight="234.0"
                              prefWidth="240.0" styleClass="simulation-container, parameter-container">
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </Pane>
                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false"
                                onAction="#onGoToSettingsClick" prefHeight="20.0" prefWidth="240.0"
                                styleClass="menu-button" text="Settings">
                            <VBox.margin>
                                <Insets bottom="5.0"/>
                            </VBox.margin>
                        </Button>
                        <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                mnemonicParsing="false"
                                onAction="#onReturnToHomeButtonClick" prefHeight="20.0" prefWidth="240.0"
                                styleClass="menu-button"
                                text="Return To Home"/>
                    </children>
                </VBox>
            </children>
        </HBox>
    </children>
</AnchorPane>
