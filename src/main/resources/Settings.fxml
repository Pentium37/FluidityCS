                        <Insets bottom="40.0" right="40.0"/>
                    </BorderPane.margin>
                </Button>
            </bottom>
            <center>
                <TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                         prefHeight="535.0" prefWidth="951.0" tabClosingPolicy="UNAVAILABLE"
                         BorderPane.alignment="CENTER">
                    <tabs>
                        <Tab text="Graphics">
                            <content>
                                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                                    <children>
                                        <VBox alignment="CENTER" prefHeight="510.0" prefWidth="951.0" spacing="50.0">
                                            <children>
                                                <Button alignment="CENTER" contentDisplay="CENTER" prefHeight="40.0"
