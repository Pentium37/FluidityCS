                                                <Button styleClass="settings-button" layoutX="487.0" layoutY="253.0"
                                                        mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                                                        GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                                                <Button styleClass="settings-button" layoutX="487.0" layoutY="83.0"
                                                        mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                                                        GridPane.columnIndex="4"/>
                                                <Button styleClass="settings-button" layoutX="487.0" layoutY="423.0"
                                                        mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                                                        GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                                                <Button styleClass="settings-button" layoutX="10.0" layoutY="83.0"
                                                        mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0"
                                                        GridPane.columnIndex="4" GridPane.rowIndex="2"/>
